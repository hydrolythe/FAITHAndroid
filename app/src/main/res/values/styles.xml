<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/onSecondary</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/onError</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/onSurface</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/onBackground</item>
        <item name="android:fontFamily">@font/sourcesanspro</item>
        <item name="fontFamily">@font/sourcesanspro</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.MyApp.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MyApp.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.MyApp.LargeComponent
        </item>
    </style>

    <style name="AppTheme.FullScreen" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Dialog.NearlyFullScreen" parent="@style/AppTheme.FullScreen">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="Theme.MaterialComponents.Light.DarkActionBar" />

    <style name="AppTheme.PopupOverlay" parent="Theme.MaterialComponents.Light" />

    <style name="AppTheme.NavigationButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">@font/sourcesanspro_semibold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextAppearance.NavigationButtonSmall" parent="AppTheme.NavigationButton">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="faith_textInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="boxStrokeColor">@color/caption</item>
        <item name="boxBackgroundColor">@color/color_white</item>
        <item name="hintTextColor">@color/caption</item>
        <item name="startIconTint">@null</item>
    </style>


    <style name="ShapeAppearance.MyApp.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30dp</item>
    </style>

    <style name="ShapeAppearance.MyApp.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30dp</item>
    </style>

    <style name="ShapeAppearance.MyApp.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30dp</item>
    </style>

    <style name="faith_button" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">69dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:textAppearance">@style/AppTheme.Button</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/color_white</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="iconTint">@null</item>
        <item name="android:gravity">center</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="faith_calendar_button" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
     <item name="shapeAppearance">@style/CalendarShapeAppearance</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/color_white</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@null</item>
    </style>
    <style name="CalendarShapeAppearance">
        <item name="cornerSizeBottomLeft">40dp</item>
        <item name="cornerSizeBottomRight">40dp</item>
    </style>

    <style name="faith_textbutton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/AppTheme.Button</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="iconTint">@null</item>
        <item name="android:gravity">center</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="Widget.AppTheme.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="arrow_style" parent="Widget.MaterialComponents.Button.Icon">
        <item name="android:layout_width">@dimen/arrow_width</item>
        <item name="android:layout_height">@dimen/arrow_height</item>
        <item name="cornerRadius">30dp</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textAppearance">@style/AppTheme.Button</item>
        <item name="android:backgroundTint">@color/color_white</item>
        <item name="iconTint">@null</item>
        <item name="iconGravity">start</item>
        <item name="android:paddingLeft">16dp</item>
        <!--item name="shapeAppearanceOverlay">@style/arrow_button_to_left</item>-->
    </style>

    <style name="AppTheme.H1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/sourcesanspro_light</item>
        <item name="android:fontFamily">@font/sourcesanspro_light</item>
        <item name="android:textSize">96sp</item>
    </style>

    <style name="AppTheme.H2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/sourcesanspro_light</item>
        <item name="android:fontFamily">@font/sourcesanspro_light</item>
        <item name="android:textSize">60sp</item>
    </style>

    <style name="AppTheme.H3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/sourcesanspro_light</item>
        <item name="android:fontFamily">@font/sourcesanspro_light</item>
        <item name="android:textSize">45sp</item>
    </style>

    <style name="AppTheme.H4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/sourcesanspro_light</item>
        <item name="android:fontFamily">@font/sourcesanspro_light</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="AppTheme.H5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/sourcesanspro</item>
        <item name="android:fontFamily">@font/sourcesanspro</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="AppTheme.H6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/sourcesanspro</item>
        <item name="android:fontFamily">@font/sourcesanspro</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/sourcesanspro</item>
        <item name="android:fontFamily">@font/sourcesanspro</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.15</item>
    </style>

    <style name="AppTheme.subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/sourcesanspro_semibold</item>
        <item name="android:fontFamily">@font/sourcesanspro_semibold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/sourcesanspro</item>
        <item name="android:fontFamily">@font/sourcesanspro</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/sourcesanspro</item>
        <item name="android:fontFamily">@font/sourcesanspro</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">25sp</item>
        <item name="fontFamily">@font/sourcesanspro_semibold</item>
        <item name="android:fontFamily">@font/sourcesanspro_semibold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="AppTheme.caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/sourcesanspro_semibold</item>
        <item name="android:fontFamily">@font/sourcesanspro_semibold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/caption</item>
    </style>

    <style name="AppTheme.overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="fontFamily">@font/sourcesanspro</item>
        <item name="android:fontFamily">@font/sourcesanspro</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.Error" parent="TextAppearance.Design.Error">
        <item name="android:textColor">@color/red</item>
        <item name="android:colorActivatedHighlight">@color/red</item>
        <item name="android:colorControlActivated">@color/red</item>
    </style>

    <style name="PopupMenu.AddDetail" parent="Widget.AppCompat.PopupMenu">
        <item name="android:dropDownHorizontalOffset">-8dp</item>
        <item name="android:dropDownVerticalOffset">4dp</item>
        <item name="android:listPreferredItemHeightSmall">100dp</item>
        <item name="android:padding">80dp</item>
        <item name="android:layout_margin">80dp</item>
    </style>

    <style name="recordingTime">
        <item name="android:textSize">15sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:color">@color/dark_green</item>
    </style>


    <style name="CardView.Transparant">
        <item name="cardBackgroundColor">@color/colorTransparent</item>
    </style>

    <style name="cinema_insets_vertical">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:background">@drawable/cinema_video_border</item>
    </style>

    <style name="cinema_insets_horizontal">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:background">@drawable/img_filmstrip_side</item>
        <item name="android:backgroundTint">#E7FFF8</item>
    </style>

    <style name="caption_textinput">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/caption</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="skyscraper_panel_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:outlineProvider">none</item>
        <item name="android:translationZ">10dp</item>
    </style>

    <style name="skyscraper_panel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:translationZ">1dp</item>
        <item name="android:foregroundGravity">center</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="skyscraper_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">22dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>
