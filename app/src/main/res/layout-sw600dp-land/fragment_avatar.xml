<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/string_avatar_name"
            android:ems="10"
            android:id="@+id/editText_avatar"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            tools:text="@tools:sample/full_names"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/avatar_textview_welcome"
            app:layout_constraintEnd_toStartOf="@+id/editText_avatar"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Welkom! Wat is jouw naam?"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/avatar_rv_avatar"
            android:layout_width="819dp"
            android:layout_height="243dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            tools:listitem="@layout/avatar_rv_item"
            app:layout_constraintHorizontal_bias="0.484"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_avatar"/>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="696dp"
            android:layout_height="105dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/avatar_rv_avatar"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"

            tools:listitem="@layout/avatar_rv_item"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/avatar_rv_backpack"
            app:layout_constraintVertical_bias="0.931"/>
</androidx.constraintlayout.widget.ConstraintLayout>
