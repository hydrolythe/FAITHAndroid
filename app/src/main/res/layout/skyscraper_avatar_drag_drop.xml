        <ImageView
            android:id="@+id/avatar_pos_lift_7"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:contentDescription="@string/your_avatar"
            android:tag="@string/your_avatar"
            app:layout_constraintBottom_toTopOf="@+id/guide_pos_4"
            app:layout_constraintEnd_toStartOf="@+id/guide_lift_end"
            app:layout_constraintStart_toStartOf="@+id/guide_lift_start"
            app:srcCompat="@drawable/empty_shape" />

        <ImageView
            android:id="@+id/avatar_pos_lift_8"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:contentDescription="@string/your_avatar"
            android:tag="@string/your_avatar"
            app:layout_constraintEnd_toStartOf="@+id/guide_lift_end"
            app:layout_constraintStart_toStartOf="@+id/guide_lift_start"
            app:layout_constraintTop_toTopOf="@+id/guide_pos_4"
            app:srcCompat="@drawable/empty_shape" />

        <ImageView
            android:id="@+id/avatar_pos_lift_9"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:contentDescription="@string/your_avatar"
            android:tag="@string/your_avatar"
            app:layout_constraintBottom_toTopOf="@+id/guide_pos_5"
            app:layout_constraintEnd_toStartOf="@+id/guide_lift_end"
            app:layout_constraintStart_toStartOf="@+id/guide_lift_start"
            app:srcCompat="@drawable/empty_shape" />

        <ImageView
            android:id="@+id/avatar_pos_lift_10"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:contentDescription="@string/your_avatar"
            android:tag="@string/your_avatar"
            app:layout_constraintEnd_toStartOf="@+id/guide_lift_end"
            app:layout_constraintStart_toStartOf="@+id/guide_lift_start"
            app:layout_constraintTop_toTopOf="@+id/guide_pos_5"
            app:srcCompat="@drawable/empty_shape" />

        <ImageView
            android:id="@+id/avatar_pos_lift_11"
