            app:layout_constraintEnd_toStartOf="@+id/guide_lift_end"
            app:layout_constraintStart_toStartOf="@+id/guide_lift_start"
            app:srcCompat="@drawable/empty_shape" />

        <ImageView
            android:id="@+id/avatar_pos_lift_12"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:contentDescription="@string/your_avatar"
            android:tag="@string/your_avatar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guide_lift_end"
            app:layout_constraintStart_toStartOf="@+id/guide_lift_start"

            app:layout_constraintTop_toTopOf="@+id/guide_pos_6"
            app:srcCompat="@drawable/empty_shape" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_stairs_end"
            android:layout_width="8dp"
            android:layout_height="12dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.18" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_stairs_top"
            android:layout_width="8dp"
            android:layout_height="12dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.04" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_lift_start"
            android:layout_width="8dp"
            android:layout_height="12dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.22" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_lift_end"
            android:layout_width="8dp"
            android:layout_height="12dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.30" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_rope_start"
            android:layout_width="8dp"
            android:layout_height="12dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.80" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_rope_end"
            android:layout_width="8dp"
            android:layout_height="12dp"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.90" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="button"
            app:layout_constraintEnd_toStartOf="@+id/guide_rope_start"
            app:layout_constraintStart_toStartOf="@+id/guide_lift_end"
            app:layout_constraintTop_toTopOf="@+id/guide_stairs_top" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{() -> goalViewModel.onSelectSubGoal(0)}"
            android:text="@{goalViewModel.subgoals.get(0) != null ?  goalViewModel.subgoals.get(0).description :  @string/empty}"
            app:layout_constraintEnd_toStartOf="@+id/guide_rope_start"
            app:layout_constraintStart_toStartOf="@+id/guide_lift_end"
            app:layout_constraintTop_toTopOf="@+id/guide_pos_1" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{goalViewModel.subgoals.get(1) != null ?  goalViewModel.subgoals.get(1).description:  @string/empty }"
            android:onClick="@{() -> goalViewModel.onSelectSubGoal(1)}"
            app:layout_constraintBottom_toTopOf="@+id/guide_pos_2"
            app:layout_constraintEnd_toStartOf="@+id/guide_rope_start"
            app:layout_constraintStart_toStartOf="@+id/guide_lift_end" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{goalViewModel.subgoals.get(2) != null ?  goalViewModel.subgoals.get(2).description :  @string/empty}"
            android:onClick="@{() -> goalViewModel.onSelectSubGoal(2)}"
            app:layout_constraintEnd_toStartOf="@+id/guide_rope_start"
            app:layout_constraintStart_toStartOf="@+id/guide_lift_end"
            app:layout_constraintTop_toTopOf="@+id/guide_pos_2" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{goalViewModel.subgoals.get(3) != null ?  goalViewModel.subgoals.get(3).description :  @string/empty}"
            android:onClick="@{() -> goalViewModel.onSelectSubGoal(3)}"
            app:layout_constraintBottom_toTopOf="@+id/guide_pos_3"
            app:layout_constraintEnd_toStartOf="@+id/guide_rope_start"
            app:layout_constraintStart_toStartOf="@+id/guide_lift_end" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_pos_1"
            android:layout_width="8dp"
            android:layout_height="12dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.15" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_pos_2"
            android:layout_width="8dp"
            android:layout_height="12dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.28" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_pos_3"
            android:layout_width="8dp"
            android:layout_height="12dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.40" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_pos_4"
            android:layout_width="8dp"
            android:layout_height="12dp"
