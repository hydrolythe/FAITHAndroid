<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="goalViewModel"
            type="be.hogent.faith.faith.skyscraper.goal.GoalViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/skyscraper_create_goal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/skyscraper_blue"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="-41dp" />

        <ImageView
            android:id="@+id/avatar_pos_stairs_1"
            android:layout_width="50dp"
            android:layout_height="65dp"
            android:contentDescription="@string/your_avatar"
            android:tag="@string/your_avatar"
            app:layout_constraintBottom_toTopOf="@+id/guide_pos_1"
            app:layout_constraintEnd_toStartOf="@+id/guide_stairs_end"
            app:srcCompat="@drawable/empty_shape" />

        <ImageView
            android:id="@+id/avatar_pos_stairs_2"
            android:layout_width="50dp"
            android:layout_height="65dp"
            android:contentDescription="@string/your_avatar"
            android:tag="@string/your_avatar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guide_pos_1"
            app:srcCompat="@drawable/empty_shape" />

        <ImageView
            android:id="@+id/avatar_pos_stairs_3"
            android:layout_width="50dp"
            android:layout_height="65dp"
            android:contentDescription="@string/your_avatar"
            android:tag="@string/your_avatar"
            app:layout_columnSpan="2"
            app:layout_constraintBottom_toTopOf="@+id/guide_pos_2"
            app:layout_constraintEnd_toStartOf="@+id/guide_stairs_end"
            app:layout_gravity="end"
            app:srcCompat="@drawable/empty_shape" />

        <ImageView
            android:id="@+id/avatar_pos_stairs_4"
