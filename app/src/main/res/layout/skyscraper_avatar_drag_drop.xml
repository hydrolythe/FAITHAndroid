            android:tag="@string/your_avatar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guide_pos_6"
            app:srcCompat="@drawable/empty_shape" />

        <ImageView
            android:id="@+id/avatar_pos_lift_1"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:contentDescription="@string/your_avatar"
            android:tag="@string/your_avatar"
            app:layout_constraintBottom_toTopOf="@+id/guide_pos_1"
            app:layout_constraintEnd_toStartOf="@+id/guide_lift_end"
            app:layout_constraintStart_toStartOf="@+id/guide_lift_start"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/empty_shape" />

        <ImageView
            android:id="@+id/avatar_pos_lift_2"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:contentDescription="@string/your_avatar"
            android:tag="@string/your_avatar"
            app:layout_constraintEnd_toStartOf="@+id/guide_lift_end"
            app:layout_constraintStart_toStartOf="@+id/guide_lift_start"
            app:layout_constraintTop_toTopOf="@+id/guide_pos_1"
            app:srcCompat="@drawable/empty_shape" />

        <ImageView
            android:id="@+id/avatar_pos_lift_3"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:contentDescription="@string/your_avatar"
            android:tag="@string/your_avatar"
            app:layout_constraintBottom_toTopOf="@+id/guide_pos_2"
            app:layout_constraintEnd_toStartOf="@+id/guide_lift_end"
            app:layout_constraintStart_toStartOf="@+id/guide_lift_start"
            app:srcCompat="@drawable/empty_shape" />

        <ImageView
            android:id="@+id/avatar_pos_lift_4"
            android:layout_width="50dp"
            android:layout_height="60dp"
