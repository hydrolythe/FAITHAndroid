<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="textDetailViewModel"
            type="be.hogent.faith.faith.details.text.create.TextDetailViewModel" />

        <import type="android.graphics.Color" />
        <import type="be.hogent.faith.faith.details.text.create.TextDetailViewModel.FontSize"/>

        <import type="be.hogent.faith.faith.details.text.create.TextDetailViewModel" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:orientation="vertical">
        <!--ACHTERGROND-->

        <!-- KNOPPEN -->
        <!-- Invisible to make it transparent -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000">

            <ImageButton
                android:id="@+id/btn_enter_text_save"
                android:layout_width="@dimen/material_icon_width"
                android:layout_height="@dimen/material_icon_height"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/save_btn"
                android:elevation="2dp"
                android:onClick="@{() -> textDetailViewModel.onSaveClicked()}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_bold"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="15dp"
                app:layout_constraintBottom_toTopOf="@+id/scrollView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_enter_text_save"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/cardView_size"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btn_enter_text_setBold"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:background="@{safeUnbox(textDetailViewModel.boldClicked)? @drawable/background : @drawable/background_noborder}"
                        android:contentDescription="@string/choose_bold"
                        android:gravity="center_horizontal"
                        android:onClick="@{() -> textDetailViewModel.onBoldClicked()}"
                        android:padding="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/bold"
                        android:text="B"
                        android:textSize="@dimen/font_size_enter_text"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/btn_enter_text_setItalic"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:background="@{safeUnbox(textDetailViewModel.italicClicked)? @drawable/background : @drawable/background_noborder}"
                        android:contentDescription="@string/choose_italic"
                        android:gravity="center_horizontal"
                        android:onClick="@{() -> textDetailViewModel.onItalicClicked()}"
                        android:padding="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/italic"
                        android:text="I"
                        android:textSize="@dimen/font_size_enter_text"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/btn_enter_text_setUnderline"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:background="@{safeUnbox(textDetailViewModel.underlineClicked)? @drawable/background : @drawable/background_noborder}"
                        android:contentDescription="@string/choose_underline"
                        android:gravity="center_horizontal"
                        android:onClick="@{() -> textDetailViewModel.onUnderlineClicked()}"
                        android:padding="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/underline"
                        android:text="@string/underline"
                        android:textSize="@dimen/font_size_enter_text" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_size"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="15dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline8"
                app:layout_constraintEnd_toStartOf="@+id/cardView_bold"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/cardView_colors"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:baselineAligned="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btn_enter_text_setFontSmall"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:background="@{textDetailViewModel.selectedFontSize==FontSize.SMALL? @drawable/background : @drawable/background_noborder}"
                        android:gravity="bottom|center_horizontal"
                        android:onClick="@{() -> textDetailViewModel.pickFontSize(FontSize.SMALL)}"
                        android:padding="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/font_sizesmall"
                        android:text="A"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/btn_enter_text_setFontNormal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:background="@{textDetailViewModel.selectedFontSize==FontSize.NORMAL?@drawable/background : @drawable/background_noborder}"
                        android:gravity="bottom|center_horizontal"
                        android:onClick="@{() -> textDetailViewModel.pickFontSize(FontSize.NORMAL)}"
                        android:padding="5dp"
                        android:scaleType="centerInside"

                        android:src="@drawable/font_sizemedium"
                        android:text="A"
                        android:textSize="40sp" />

                    <TextView
                        android:id="@+id/btn_enter_text_setFontLarge"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:background="@{textDetailViewModel.selectedFontSize==FontSize.LARGE? @drawable/background : @drawable/background_noborder}"
                        android:gravity="center_horizontal"
                        android:onClick="@{() -> textDetailViewModel.pickFontSize(FontSize.LARGE)}"
                        android:padding="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/font_sizelarge"
                        android:text="A"
                        android:textSize="50sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_colors"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="@dimen/panel_corner_radius"
                app:layout_constraintBottom_toTopOf="@+id/guideline8"
                app:layout_constraintEnd_toStartOf="@+id/cardView_size"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/btn_enter_text_setColorBlue"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:background="@{safeUnbox(textDetailViewModel.selectedTextColor)==@color/blue ? @drawable/background : @drawable/background_noborder}"
                        android:contentDescription="@string/choose_blue"
                        android:onClick="@{() -> textDetailViewModel.pickTextColor(@color/blue)}"
                        android:padding="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/paintpot_blue" />

                    <ImageView
                        android:id="@+id/btn_enter_text_setColorRed"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:background="@{safeUnbox(textDetailViewModel.selectedTextColor)==@color/red ? @drawable/background : @drawable/background_noborder}"
                        android:contentDescription="@string/choose_red"
                        android:onClick="@{() -> textDetailViewModel.pickTextColor(@color/red)}"

                        android:padding="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/paintpot_red" />

                    <ImageView
                        android:id="@+id/btn_enter_text_setColorYellow"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:background="@{safeUnbox(textDetailViewModel.selectedTextColor)==@color/yellow ? @drawable/background : @drawable/background_noborder}"
                        android:contentDescription="@string/choose_yellow"
                        android:onClick="@{() -> textDetailViewModel.pickTextColor(@color/yellow)}"
                        android:padding="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/paintpot_yellow" />

                    <ImageView
                        android:id="@+id/btn_enter_text_setColorGreen"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:background="@{textDetailViewModel.selectedTextColor==@color/green ? @drawable/background : @drawable/background_noborder}"
                        android:contentDescription="@string/choose_green"
                        android:onClick="@{() -> textDetailViewModel.pickTextColor(@color/green)}"
                        android:padding="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/paintpot_green" />

                    <ImageView
                        android:id="@+id/btn_enter_text_setColorBlack"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:background="@{safeUnbox(textDetailViewModel.selectedTextColor)==@color/black ? @drawable/background : @drawable/background_noborder}"
                        android:contentDescription="@string/choose_black"
                        android:onClick="@{() -> textDetailViewModel.pickTextColor(@color/black)}"
                        android:padding="5dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/paintpot_black" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <ScrollView
                android:id="@+id/scrollView2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:fillViewport="true"
                android:scrollbars="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guideline8">


                <jp.wasabeef.richeditor.RichEditor
                    android:id="@+id/enterText_editor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />
            </ScrollView>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.18" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </FrameLayout>
</layout>