<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <variable
            name="eventViewModel"
            type="be.hogent.faith.faith.emotionCapture.enterEventDetails.EventViewModel" />

        <variable
            name="enterTextViewModel"
            type="be.hogent.faith.faith.emotionCapture.enterText.EnterTextViewModel" />

        <import type="android.graphics.Color" />

        <import type="be.hogent.faith.faith.emotionCapture.enterText.EnterTextViewModel.FontSize" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <!--ACHTERGROND-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/editor_horizontal"
        android:contentDescription="@string/tekenen" />

    <!-- KNOPPEN -->
    <!-- Invisible to make it transparent -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000">
 >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/guide_editor_utilities_bottom"
            app:layout_constraintEnd_toStartOf="@+id/guide_editor_utilities_right"
            app:layout_constraintStart_toStartOf="@+id/guide_editor_utilities_left"
            app:layout_constraintTop_toTopOf="@+id/guide_editor_utilities_top"
            >

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="70"
            app:cardCornerRadius="15dp"
            android:layout_marginRight="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/btn_enter_text_setColorBlack"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_weight="1"
                android:contentDescription="@string/choose_black"
                android:padding="5dp"
                android:scaleType="centerInside"
                android:onClick="@{() -> enterTextViewModel.pickTextColor(Color.BLACK)}"
                android:background="@{safeUnbox(enterTextViewModel.selectedTextColor)==Color.BLACK ? @drawable/background : @drawable/background_noborder}"
                android:src="@drawable/paintpot_black" />

            <ImageButton
                android:id="@+id/btn_enter_text_setColorBlue"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:padding="5dp"
                android:scaleType="centerInside"
                android:background="@{safeUnbox(enterTextViewModel.selectedTextColor)==Color.BLUE ? @drawable/background : @drawable/background_noborder}"
                android:contentDescription="@string/choose_blue"
                android:onClick="@{() -> enterTextViewModel.pickTextColor(Color.BLUE)}"
                android:src="@drawable/paintpot_blue" />

            <ImageButton
                android:id="@+id/btn_enter_text_setColorRed"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:padding="5dp"
                android:scaleType="centerInside"
                android:background="@{safeUnbox(enterTextViewModel.selectedTextColor)==Color.RED ? @drawable/background : @drawable/background_noborder}"

                android:contentDescription="@string/choose_red"
                android:onClick="@{() -> enterTextViewModel.pickTextColor(Color.RED)}"
                android:src="@drawable/paintpot_red" />

            <ImageButton
                android:id="@+id/btn_enter_text_setColorYellow"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:padding="5dp"
                android:scaleType="centerInside"
                android:background="@{safeUnbox(enterTextViewModel.selectedTextColor)==Color.YELLOW ? @drawable/background : @drawable/background_noborder}"
                android:contentDescription="@string/choose_yellow"
                android:onClick="@{() -> enterTextViewModel.pickTextColor(Color.YELLOW)}"
                android:src="@drawable/paintpot_yellow" />

            <ImageButton
                android:id="@+id/btn_enter_text_setColorGreen"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:padding="5dp"
                android:scaleType="centerInside"
                android:background="@{enterTextViewModel.selectedTextColor==Color.GREEN ? @drawable/background : @drawable/background_noborder}"
                android:contentDescription="@string/choose_green"
                android:onClick="@{() -> enterTextViewModel.pickTextColor(Color.GREEN)}"
                android:src="@drawable/paintpot_green" />
        </LinearLayout>
        </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:cardCornerRadius="15dp"
                android:layout_marginRight="8dp"
                android:layout_weight="15"
>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="8dp">

                    <ImageView
                        android:id="@+id/btn_enter_text_setFontSmall"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:padding="5dp"
                        android:scaleType="centerInside"
                        android:background="@{enterTextViewModel.selectedFontSize==FontSize.SMALL? @drawable/background : @drawable/background_noborder}"
                        android:onClick="@{() -> enterTextViewModel.pickFontSize(FontSize.SMALL)}"
                        android:src="@drawable/font_sizesmall" />

                    <ImageView
                        android:id="@+id/btn_enter_text_setFontNormal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:padding="5dp"
                        android:scaleType="centerInside"
                        android:background="@{enterTextViewModel.selectedFontSize==FontSize.NORMAL? @drawable/background : @drawable/background_noborder}"

                        android:onClick="@{() -> enterTextViewModel.pickFontSize(FontSize.NORMAL)}"
                        android:src="@drawable/font_sizemedium" />

                    <ImageView
                        android:id="@+id/btn_enter_text_setFontLarge"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:padding="5dp"
                        android:scaleType="centerInside"
                        android:background="@{enterTextViewModel.selectedFontSize==FontSize.LARGE? @drawable/background : @drawable/background_noborder}"
                        android:onClick="@{() -> enterTextViewModel.pickFontSize(FontSize.LARGE)}"
                        android:src="@drawable/font_sizelarge" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15"
            app:cardCornerRadius="15dp"
            android:layout_marginRight="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/btn_enter_text_setBold"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:padding="5dp"
                android:scaleType="centerInside"
                android:background="@{safeUnbox(enterTextViewModel.boldClicked)? @drawable/background : @drawable/background_noborder}"
                android:contentDescription="@string/choose_bold"
                android:src="@drawable/bold"
                android:onClick="@{() -> enterTextViewModel.onBoldClicked()}"
/>

            <ImageView
                android:id="@+id/btn_enter_text_setItalic"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:padding="5dp"
                android:scaleType="centerInside"
                android:background="@{safeUnbox(enterTextViewModel.italicClicked)? @drawable/background : @drawable/background_noborder}"
                android:contentDescription="@string/choose_italic"
                android:src="@drawable/italic"
                android:onClick="@{() -> enterTextViewModel.onItalicClicked()}"
 />

            <ImageView
                android:id="@+id/btn_enter_text_setUnderline"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:padding="5dp"
                android:scaleType="centerInside"
                android:background="@{safeUnbox(enterTextViewModel.underlineClicked)? @drawable/background : @drawable/background_noborder}"
                android:contentDescription="@string/choose_underline"
                android:src="@drawable/underline"
                 android:onClick="@{() -> enterTextViewModel.onUnderlineClicked()}"
 />
        </LinearLayout>
        </androidx.cardview.widget.CardView>



        </LinearLayout>

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/guide_editor_editor_bottom"
            app:layout_constraintEnd_toStartOf="@+id/guide_editor_editor_right"
            app:layout_constraintStart_toStartOf="@+id/guide_editor_editor_left"
            app:layout_constraintTop_toTopOf="@+id/guide_editor_editor_top" >


            <jp.wasabeef.richeditor.RichEditor
                android:id="@+id/editor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:focusable="true"
                android:focusableInTouchMode="true"/>
        </ScrollView>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_editor_utilities_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_editor_utilities_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.2" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_editor_utilities_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_editor_utilities_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.94" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_editor_editor_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.23" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_editor_editor_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.96" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_editor_editor_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_editor_editor_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.94" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</FrameLayout>
</layout>