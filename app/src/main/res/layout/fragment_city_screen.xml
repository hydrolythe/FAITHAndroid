<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>

        <variable
            name="cityScreenViewModel"
            type="be.hogent.faith.faith.cityScreen.CityScreenViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--ACHTERGROND-->
        <ImageView
            android:id="@+id/background_city_screen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/frag_main_descr_city_plan" />

        <!-- KNOPPEN -->
        <!-- Invisible to make it transparent -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000">

            <!--Every button is set by using two intersecting guidelines.
                The top left corner of the button is located at the intersection.
                It might be better to use four guidelines so that we get 2 points (top-left and bottom-right),
                and let the Views decide their dimensions solely through their constrains.
                This will however produce a large amount of Guidelines.

                Why use guidelines, and not a kind of map? Because maps inherently use pixels, and those won't work
                on screens of different resolutions. Guidelines can be set using percentages which will scale with
                the device.-->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide_pole_right_start"
                android:layout_width="8dp"
                android:layout_height="12dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.49" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide_pole_top"
                android:layout_width="8dp"
                android:layout_height="12dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.0" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide_pole_right_end"
                android:layout_width="8dp"
                android:layout_height="12dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.73" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide_pole_bottom"
                android:layout_width="8dp"
                android:layout_height="12dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.24" />

            <View
                android:id="@+id/btn_welcome_register"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="@{() -> cityScreenViewModel.firstLocationClicked()}"
                app:layout_constraintBottom_toTopOf="@id/guide_pole_bottom"
                app:layout_constraintEnd_toStartOf="@id/guide_pole_right_end"
                app:layout_constraintStart_toStartOf="@+id/guide_pole_right_start"
                app:layout_constraintTop_toTopOf="@+id/guide_pole_top" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide_pole_left_end"
                android:layout_width="8dp"
                android:layout_height="12dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.39" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide_loc2_top"
                android:layout_width="8dp"
                android:layout_height="12dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.38" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide_pole_left_start"
                android:layout_width="8dp"
                android:layout_height="12dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.63" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide_loc2_bottom"
                android:layout_width="8dp"
                android:layout_height="12dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.54" />
            <!--AVATAR -->
            <ImageView
                android:id="@+id/image_main_avatar"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:contentDescription="@string/frag_main_descr_your_avatar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <View
                android:id="@+id/btn_welcome_login"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#00000000"
                android:onClick="@{() -> cityScreenViewModel.secondLocationClicked()}"
                app:layout_constraintBottom_toTopOf="@id/guide_loc2_bottom"
                app:layout_constraintEnd_toStartOf="@id/guide_pole_left_start"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/guide_pole_left_end"
                app:layout_constraintTop_toTopOf="@+id/guide_loc2_top"
                app:layout_constraintVertical_bias="0.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>