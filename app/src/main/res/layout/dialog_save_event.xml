<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:text="@string/lbl_save_event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lbl_save_event_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/txt_save_event_title"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lbl_save_event_date"
            android:text="@string/lbl_save_event_date"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/btn_save_event_open_datepicker"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lbl_save_event_notes"
            android:text="@string/lbl_save_event_notes"
            app:layout_constraintTop_toTopOf="@+id/txt_save_event_notes"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/txt_save_event_notes"
            tools:text="@tools:sample/lorem"
            app:layout_constraintStart_toStartOf="@+id/guide_save_event"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btn_save_event_save"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_save_event_open_datepicker"/>

    <TextView
            tools:text="Titel van event"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/txt_save_event_title"
            app:layout_constraintStart_toStartOf="@+id/guide_save_event"
            android:layout_margin="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_save_event_open_datepicker"
            tools:text="@tools:sample/date/ddmmyy"
            android:layout_margin="16dp"
            app:layout_constraintStart_toStartOf="@+id/guide_save_event"
            app:layout_constraintTop_toBottomOf="@+id/txt_save_event_title"/>

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guide_save_event"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.2"/>

    <Button
            android:text="@string/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_save_event_save"
            android:layout_margin="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <Button
            android:text="@string/lbl_back"
            android:layout_width="wrap_content"
            android:layout_margin="16dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_save_event_cancel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/btn_save_event_save"/>

</androidx.constraintlayout.widget.ConstraintLayout>