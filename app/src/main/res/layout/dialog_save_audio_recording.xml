<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
                name="recordAudioViewModel"
                type="be.hogent.faith.faith.recordAudio.RecordAudioViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                       xmlns:app="http://schemas.android.com/apk/res-auto"
                                                       android:layout_width="wrap_content"
                                                       android:layout_height="wrap_content">


        <TextView
                android:text="@string/lbl_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:id="@+id/lbl_save_audio_recording_name"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="@string/hint_audio_recording_name"
                android:imeOptions="flagNoFullscreen"
                android:text="@={recordAudioViewModel.recordingName}"
                android:id="@+id/txt_save_audio_recording_name"
                app:layout_constraintBaseline_toBaselineOf="@+id/lbl_save_audio_recording_name"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/lbl_save_audio_recording_name"
                android:layout_marginStart="8dp"/>

        <Button
                android:text="@android:string/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_save_audio_recording_cancel"
                android:onClick="@{() -> recordAudioViewModel.onCancelButtonClicked()}"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_save_audio_recording_name"/>

        <Button
                android:text="@string/save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_save_audio_recording_save"
                android:layout_marginTop="8dp"
                android:onClick="@{() -> recordAudioViewModel.onSaveButtonClicked()}"
                app:layout_constraintTop_toBottomOf="@+id/txt_save_audio_recording_name"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
