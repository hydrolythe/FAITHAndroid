<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="eventViewModel"
            type="be.hogent.faith.faith.emotionCapture.enterEventDetails.EventViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--ACHTERGROND-->
        <ImageView
            android:id="@+id/background_event_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/descr_city_park" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/screen_new_event"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide_top_pole"
                android:layout_width="8dp"
                android:layout_height="12dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.4" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide_middle_horizontal_pole"
                android:layout_width="8dp"
                android:layout_height="12dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.52" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide_bottom_pole"
                android:layout_width="8dp"
                android:layout_height="12dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.65" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide_left_pole"
                android:layout_width="8dp"
                android:layout_height="12dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.45" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide_right_pole"
                android:layout_width="8dp"
                android:layout_height="12dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.91" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide_middle_vertical_pole"
                android:layout_width="8dp"
                android:layout_height="12dp"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.68" />


            <TextView
                android:id="@+id/label_event_details_title"
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="@string/event_details_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/label_event_details_event_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:labelFor="@id/txt_event_details_title"
                android:text="@string/event_details_label_title"
                app:layout_constraintBottom_toTopOf="@id/event_details_upperDivider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/label_event_details_title" />

            <EditText
                android:id="@+id/txt_event_details_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:inputType="text"
                android:text="@={eventViewModel.eventTitle}"
                app:layout_constraintBaseline_toBaselineOf="@id/label_event_details_event_title"
                app:layout_constraintEnd_toStartOf="@+id/guide_left_pole"
                app:layout_constraintStart_toEndOf="@id/label_event_details_event_title"
                tools:text="Titel van de gebeurtenis" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/event_details_upperDivider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.15" />

            <Button
                android:id="@+id/btn_event_details_text"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/description_addText"
                android:onClick="@{() -> eventViewModel.onTextButtonClicked()}"
                app:layout_constraintBottom_toTopOf="@+id/guide_bottom_pole"
                app:layout_constraintEnd_toStartOf="@+id/guide_right_pole"
                app:layout_constraintStart_toStartOf="@+id/guide_middle_vertical_pole"
                app:layout_constraintTop_toTopOf="@+id/guide_middle_horizontal_pole" />

            <Button
                android:id="@+id/btn_event_details_camera"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/description_addPhoto"
                android:onClick="@{() -> eventViewModel.onCameraButtonClicked()}"
                app:layout_constraintBottom_toTopOf="@+id/guide_bottom_pole"
                app:layout_constraintEnd_toStartOf="@+id/guide_middle_vertical_pole"
                app:layout_constraintStart_toStartOf="@+id/guide_left_pole"
                app:layout_constraintTop_toTopOf="@+id/guide_middle_horizontal_pole" />

            <Button
                android:id="@+id/btn_event_details_audio"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/description_addAudio"
                android:onClick="@{() -> eventViewModel.onAudioButtonClicked()}"
                app:layout_constraintBottom_toTopOf="@+id/guide_middle_horizontal_pole"
                app:layout_constraintEnd_toStartOf="@+id/guide_middle_vertical_pole"
                app:layout_constraintStart_toStartOf="@+id/guide_left_pole"
                app:layout_constraintTop_toTopOf="@+id/guide_top_pole" />

            <Button
                android:id="@+id/btn_event_details_drawing"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/description_addDrawing"
                android:onClick="@{() -> eventViewModel.onDrawingButtonClicked()}"
                android:src="@drawable/event_detail_drawing"
                app:layout_constraintBottom_toTopOf="@+id/guide_middle_horizontal_pole"
                app:layout_constraintEnd_toStartOf="@+id/guide_right_pole"
                app:layout_constraintStart_toStartOf="@+id/guide_middle_vertical_pole"
                app:layout_constraintTop_toTopOf="@+id/guide_top_pole" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide_vertical_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.82" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide_horizontal_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.78" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_event_details_details"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="16dp"
                android:layout_marginEnd="8dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_event_details_gotoEmotionAvatar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/guide_horizontal_details" />

            <!--ImageButton
                android:id="@+id/btn_event_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="24dp"
                android:src="@drawable/event_details_send"
                android:onClick="@{() -> eventViewModel.onSendButtonClicked()}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/guide_horizontal_details"
                app:layout_constraintTop_toTopOf="parent" />
                -->

            <Button
                android:id="@+id/btn_event_details_gotoEmotionAvatar"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@android:color/transparent"
                android:onClick="@{() -> eventViewModel.onEmotionAvatarClicked()}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guide_vertical_avatar"
                app:layout_constraintTop_toTopOf="@+id/guide_horizontal_details" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

</layout>
