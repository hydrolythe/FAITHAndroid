<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
                name="eventDetailsVM"
                type="be.hogent.faith.faith.enterEventDetails.EventDetailsViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">

        <TextView
                android:text="@string/event_details_title"
                android:layout_width="wrap_content"
                android:id="@+id/label_event_details_title"
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:layout_margin="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="wrap_content"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/label_event_details_title"
                android:layout_margin="16dp"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/label_event_details_event_title"
                app:layout_constraintBottom_toTopOf="@id/event_details_upperDivider"
                android:labelFor="@id/editText_event_details_event_title"
                android:text="@string/event_details_label_title"/>

        <EditText
                android:layout_width="0dp"
                android:inputType="text"
                android:layout_height="wrap_content"
                android:id="@+id/editText_event_details_event_title"
                app:layout_constraintStart_toEndOf="@id/label_event_details_event_title"
                app:layout_constraintEnd_toStartOf="@id/event_details_middleDivider"
                android:text="@={eventDetailsVM.eventTitle}"
                tools:text="Titel van de gebeurtenis"
                app:layout_constraintBaseline_toBaselineOf="@id/label_event_details_event_title"
                />

        <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/event_details_upperDivider"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.15"/>

        <ImageButton
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="16dp"
                app:layout_constraintTop_toBottomOf="@id/event_details_upperDivider"
                app:layout_constraintBottom_toTopOf="@id/btn_event_details_audio"
                android:src="@drawable/event_detail_text"
                android:id="@+id/btn_event_details_text"
                android:onClick="@{() -> eventDetailsVM.onTextButtonClicked()}"
                app:layout_constraintEnd_toStartOf="@id/event_details_middleDivider"
                app:layout_constraintStart_toStartOf="parent"
                android:contentDescription="@string/description_addText"/>

        <ImageButton
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="16dp"
                app:layout_constraintTop_toTopOf="@id/event_details_upperDivider"
                app:layout_constraintStart_toEndOf="@id/event_details_middleDivider"
                android:onClick="@{() -> eventDetailsVM.onCameraButtonClicked()}"
                app:layout_constraintBottom_toTopOf="@id/btn_event_details_drawing"
                android:src="@drawable/event_detail_camera"
                android:id="@+id/btn_event_details_camera"
                app:layout_constraintEnd_toEndOf="@id/event_details_sideDivider"
                android:contentDescription="@string/description_addPhoto"/>

        <ImageButton
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/event_detail_audio"
                android:layout_margin="16dp"
                app:layout_constraintBottom_toBottomOf="@id/event_details_lowerDivider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/event_details_middleDivider"
                android:onClick="@{() -> eventDetailsVM.onAudioButtonClicked()}"
                app:layout_constraintTop_toBottomOf="@id/btn_event_details_text"
                android:id="@+id/btn_event_details_audio"
                android:contentDescription="@string/description_addAudio"/>

        <ImageButton
                android:layout_width="0dp"
                android:layout_margin="16dp"
                android:src="@drawable/event_detail_drawing"
                android:onClick="@{() -> eventDetailsVM.onDrawingButtonClicked()}"
                android:layout_height="0dp"
                android:id="@+id/btn_event_details_drawing"
                app:layout_constraintStart_toEndOf="@id/event_details_middleDivider"
                app:layout_constraintTop_toBottomOf="@id/btn_event_details_camera"
                app:layout_constraintBottom_toTopOf="@+id/event_details_lowerDivider"
                app:layout_constraintEnd_toEndOf="@id/event_details_sideDivider"
                android:contentDescription="@string/description_addDrawing"/>

        <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/event_details_lowerDivider"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.85"/>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_event_details_details"
                app:layout_constraintTop_toBottomOf="@id/event_details_lowerDivider"
                app:layout_constraintEnd_toStartOf="@+id/event_details_sideDivider"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_margin="16dp"
                android:layout_height="0dp"
                android:layout_width="0dp"/>

        <ImageButton
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/btn_event_details_send"
                app:layout_constraintTop_toBottomOf="@id/event_details_lowerDivider"
                android:src="@drawable/event_details_send"
                android:layout_margin="16dp"
                android:onClick="@{() -> eventDetailsVM.onSendButtonClicked()}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/event_details_sideDivider"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.constraintlayout.widget.Guideline
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:id="@+id/event_details_sideDivider"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintGuide_percent="0.9"/>

        <ImageButton
                android:layout_height="wrap_content"
                android:src="@drawable/event_detail_go_to_emotion"
                android:onClick="@{() -> eventDetailsVM.onEmotionAvatarClicked()}"
                android:id="@+id/btn_event_details_gotoEmotionAvatar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/event_details_sideDivider"
                app:layout_constraintTop_toBottomOf="@id/event_details_upperDivider"
                app:layout_constraintBottom_toTopOf="@id/event_details_lowerDivider"
                android:layout_width="wrap_content"/>

        <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/event_details_middleDivider"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.45"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
