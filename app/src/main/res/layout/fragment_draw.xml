<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="drawViewModel"
            type="be.hogent.faith.faith.drawing.DrawViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <include
            android:id="@+id/container_draw_utilities"
            layout="@layout/panel_drawing_tools"
            bind:drawViewModel="@{drawViewModel}" />

        <com.divyanshu.draw.widget.DrawView
            android:id="@+id/drawView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <include
            android:id="@+id/container_draw_images"
            layout="@layout/panel_drawing_images" />

    </LinearLayout>
</layout>
