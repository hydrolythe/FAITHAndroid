<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/skyscraper_panel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:translationZ="1dp"
            android:foregroundGravity="center"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toTopOf="@+id/negativemargin"
            app:layout_constraintEnd_toEndOf="@+id/skyscraper_base"
            app:layout_constraintStart_toStartOf="@+id/skyscraper_base"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/skyscraper_panel_blue_rv" />

        <EditText
            android:id="@+id/txt_goal_description"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:elevation="1dp"
            tools:text="BESCHRIJVING DOEL"
            android:autofillHints="Doelbeschrijving"
            android:inputType="textMultiLine"
            app:layout_constraintBottom_toBottomOf="@id/skyscraper_panel"
            app:layout_constraintEnd_toEndOf="@id/skyscraper_panel"
            app:layout_constraintStart_toStartOf="@id/skyscraper_panel"
            app:layout_constraintTop_toTopOf="@id/skyscraper_panel" />


        <View
            android:id="@+id/negativemargin"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="52dp"
            app:layout_constraintTop_toTopOf="@id/skyscraper_base"
            app:layout_constraintStart_toStartOf="@id/skyscraper_panel"
            app:layout_constraintEnd_toEndOf="@id/skyscraper_panel"/>

        <ImageView
            android:id="@+id/skyscraper_base"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/skyscraper_panel"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/skyscraper_blue_rv" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
