<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="drawViewModel"
            type="be.hogent.faith.faith.emotionCapture.drawing.DrawViewModel" />

    </data>

    <FrameLayout
        android:id="@+id/screen_draw_avatar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--ACHTERGROND-->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_register_info_color">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide_draw_utilities_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05" />

            <include
                android:id="@+id/container_draw_colors"
                layout="@layout/panel_drawing_colors"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@id/container_draw_utilities"
                app:layout_constraintEnd_toEndOf="@+id/guide_drawView_drawTools_left"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/guide_drawView_drawUtilities_left"
                app:layout_constraintTop_toTopOf="@+id/guide_drawView_drawTools_top"
                app:layout_constraintVertical_weight="0.75"
                bind:drawViewModel="@{drawViewModel}" />

            <include
                android:id="@+id/container_draw_utilities"
                layout="@layout/panel_drawing_tools"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/guide_drawView_drawTools_bottom"
                app:layout_constraintEnd_toEndOf="@+id/guide_drawView_drawTools_left"
                app:layout_constraintStart_toStartOf="@+id/guide_drawView_drawUtilities_left"
                app:layout_constraintTop_toBottomOf="@id/container_draw_colors"
                app:layout_constraintVertical_weight="0.25"
                bind:drawViewModel="@{drawViewModel}" />

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                app:cardCornerRadius="@dimen/panel_corner_radius"
                app:layout_constraintBottom_toBottomOf="@+id/guide_drawView_drawTools_bottom"
                app:layout_constraintEnd_toEndOf="@+id/guide_drawView_drawTools_right"
                app:layout_constraintStart_toEndOf="@+id/guide_drawView_drawTools_left"
                app:layout_constraintTop_toTopOf="@+id/guide_drawView_drawTools_top" >


                <com.divyanshu.draw.widget.DrawView
                    android:id="@+id/drawView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </androidx.cardview.widget.CardView>



            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide_drawView_drawUtilities_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.04" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide_drawView_drawTools_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.15" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide_drawView_drawTools_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide_drawView_drawTools_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.94" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide_drawView_drawTools_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.04" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>