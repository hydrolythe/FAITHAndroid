<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
                name="drawEmotionViewModel"
                type="be.hogent.faith.faith.drawEmotionAvatar.DrawEmotionViewModel"/>

        <import type="android.graphics.Color"/>

        <import type="be.hogent.faith.faith.drawEmotionAvatar.DrawEmotionViewModel.LineWidth"/>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:id="@+id/container_draw_utilities"
                android:layout_width="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

            <ImageButton
                    android:layout_width="50dp"
                    android:src="@drawable/circle_black"
                    android:onClick="@{() -> drawEmotionViewModel.pickColor(Color.BLACK)}"
                    android:id="@+id/btn_draw_setColorBlack"
                    android:layout_height="50dp"/>

            <ImageButton
                    android:layout_width="50dp"
                    android:src="@drawable/circle_blue"
                    android:onClick="@{() -> drawEmotionViewModel.pickColor(Color.BLUE)}"
                    android:id="@+id/btn_draw_setColorBlue"
                    android:layout_height="50dp"/>

            <ImageButton
                    android:layout_width="50dp"
                    android:src="@drawable/circle_red"
                    android:onClick="@{() -> drawEmotionViewModel.pickColor(Color.RED)}"
                    android:id="@+id/btn_draw_setColorRed"
                    android:layout_height="50dp"/>

            <ImageButton
                    android:layout_width="50dp"
                    android:onClick="@{() -> drawEmotionViewModel.pickColor(Color.YELLOW)}"
                    android:src="@drawable/circle_yellow"
                    android:id="@+id/btn_draw_setColorYellow"
                    android:layout_height="50dp"/>

            <ImageButton
                    android:src="@drawable/circle_green"
                    android:layout_width="50dp"
                    android:onClick="@{() -> drawEmotionViewModel.pickColor(Color.GREEN)}"
                    android:id="@+id/btn_draw_setColorGreen"
                    android:layout_height="50dp"/>

            <Button
                    android:layout_width="wrap_content"
                    android:text="dun"
                    android:onClick="@{() -> drawEmotionViewModel.setLineWidth(LineWidth.THIN)}"
                    android:id="@+id/btn_draw_setThinLineWidth"
                    android:layout_height="wrap_content"/>

            <Button
                    android:layout_width="wrap_content"
                    android:id="@+id/btn_draw_setMediumLineWidth"
                    android:onClick="@{() -> drawEmotionViewModel.setLineWidth(LineWidth.MEDIUM)}"
                    android:text="middel"
                    android:layout_height="wrap_content"/>

            <Button
                    android:layout_width="wrap_content"
                    android:id="@+id/btn_draw_setThickLineWidth"
                    android:text="dik"
                    android:onClick="@{() -> drawEmotionViewModel.setLineWidth(LineWidth.THICK)}"
                    android:layout_height="wrap_content"/>

            <ImageButton
                    android:id="@+id/btn_draw_selectEraser"
                    android:onClick="@{() -> drawEmotionViewModel.toggleEraser()}"
                    android:src="@drawable/ic_eraser_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <com.divyanshu.draw.widget.DrawView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/container_draw_utilities"
                android:id="@+id/draw_canvas"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>