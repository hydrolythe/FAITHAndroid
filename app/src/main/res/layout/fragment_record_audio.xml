<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="recordAudioViewModel"
            type="be.hogent.faith.faith.emotionCapture.recordAudio.RecordAudioViewModel" />

        <import type="be.hogent.faith.faith.emotionCapture.recordAudio.RecordAudioViewModel.RecordingStatus" />

        <import type="android.view.View" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <!--ACHTERGROND-->
    <ImageView
        android:id="@+id/background_recordaudio_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/tekenen" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000">

        <ImageView
            android:id="@+id/btn_recordAudio_pause"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="@string/description_pause_recording"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:onClick="@{() -> recordAudioViewModel.onUserViewModel"
            android:src="@drawable/audio_pause"
            android:visibility="@{recordAudioViewModel.recordingStatus != RecordingStatus.PAUSED? View.VISIBLE : View.INVISIBLE}"
            app:layout_constraintBottom_toBottomOf="@+id/guide_recordaudio_bottom"
            app:layout_constraintEnd_toStartOf="@+id/guide_recordaudio_pauze_right"
            app:layout_constraintStart_toEndOf="@+id/guide_recordaudio_pauze_left"
            app:layout_constraintTop_toTopOf="@+id/guide_recordaudio_top" />

        <ImageView
            android:id="@+id/btn_recordAudio_record"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:contentDescription="@string/description_start_recording"
            android:onClick="@{() -> recordAudioViewModel.onRecordButtonClicked()}"
            android:src="@drawable/audio_record"
            android:visibility="@{recordAudioViewModel.recordingStatus != RecordingStatus.RECORDING? View.VISIBLE : View.INVISIBLE}"
            app:layout_constraintBottom_toBottomOf="@+id/guide_recordaudio_bottom"
            app:layout_constraintEnd_toStartOf="@+id/guide_recordaudio_record_right"
            app:layout_constraintStart_toEndOf="@+id/guide_recordaudio_record_left"
            app:layout_constraintTop_toTopOf="@+id/guide_recordaudio_top"/>

        <ImageView
            android:id="@+id/btn_recordAudio_restart"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:contentDescription="@string/description_restart_recording"
            android:onClick="@{() -> recordAudioViewModel.onRestartButtonClicked()}"
            android:src="@drawable/audio_restart"
            app:layout_constraintBottom_toBottomOf="@+id/guide_recordaudio_bottom"
            app:layout_constraintEnd_toStartOf="@+id/guide_recordaudio_restart_right"
            app:layout_constraintStart_toEndOf="@+id/guide_recordaudio_restart_left"
            app:layout_constraintTop_toTopOf="@+id/guide_recordaudio_top"/>

        <ImageView
            android:id="@+id/btn_recordAudio_stop"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:contentDescription="@string/description_stop_recording"
            android:onClick="@{() -> recordAudioViewModel.onStopButtonClicked()}"
            android:src="@drawable/audio_stop"
            app:layout_constraintBottom_toBottomOf="@+id/guide_recordaudio_bottom"
            app:layout_constraintEnd_toStartOf="@+id/guide_recordaudio_stop_right"
            app:layout_constraintStart_toEndOf="@+id/guide_recordaudio_stop_left"
            app:layout_constraintTop_toTopOf="@+id/guide_recordaudio_top"/>


            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide_recordaudio_pauze_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.27" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide_recordaudio_pauze_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.35" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide_recordaudio_record_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.41" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide_recordaudio_record_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.49" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide_recordaudio_restart_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.54" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide_recordaudio_restart_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.62" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide_recordaudio_stop_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.68" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide_recordaudio_stop_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.76" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide_recordaudio_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.22" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide_recordaudio_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.36" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>