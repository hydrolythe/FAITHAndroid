<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <import type="be.hogent.faith.faith.details.audio.AudioViewState" />

        <variable
            name="audioDetailViewModel"
            type="be.hogent.faith.faith.details.audio.AudioDetailViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_record_audio"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/audio_opnemen"
            android:contentDescription="@string/audio_opnemen"
            android:scaleType="fitCenter" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000">

            <ImageButton
                android:layout_width="@dimen/material_icon_width"
                android:layout_height="@dimen/material_icon_height"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/save_btn"
                android:contentDescription="@string/save"
                android:onClick="@{() -> audioDetailViewModel.onSaveClicked()}"
                android:visibility="@{audioDetailViewModel.saveButtonVisible? View.VISIBLE : View.GONE}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- https://medium.com/androiddevelopers/building-a-simple-audio-app-in-android-part-3-3-ead4a0e10673 -->
            <SeekBar
                android:id="@+id/seekBar_audio_progress"
                android:layout_width="1000dp"
                android:layout_height="20dp"
                app:layout_constraintBottom_toTopOf="@+id/cardView_audio_center"
                app:layout_constraintEnd_toEndOf="@+id/cardView_audio_center"
                app:layout_constraintStart_toStartOf="@+id/cardView_audio_center"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView_audio_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/panel_corner_radius"
                app:layout_constraintBottom_toTopOf="@+id/guide_recordAudio_bottom"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/audio_initial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:visibility="@{audioDetailViewModel.viewState == be.hogent.faith.faith.details.audio.AudioViewState.Initial ? View.VISIBLE : View.GONE}">

                    <ImageButton
                        android:id="@+id/btn_recordAudio_record"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_audio_record"
                        android:contentDescription="@string/description_start_recording"
                        android:onClick="@{() -> audioDetailViewModel.onRecordButtonClicked()}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/audio_recording"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:visibility="@{audioDetailViewModel.viewState == be.hogent.faith.faith.details.audio.AudioViewState.Recording ? View.VISIBLE : View.GONE}">

                    <ImageButton
                        android:id="@+id/btn_recordAudio_stop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_audio_stop"
                        android:contentDescription="@string/description_stop_recording"
                        android:onClick="@{() -> audioDetailViewModel.onStopButtonClicked()}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/audio_doneRecording"
                    android:layout_width="420dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="8dp"
                    android:visibility="@{audioDetailViewModel.viewState == be.hogent.faith.faith.details.audio.AudioViewState.FinishedRecording ? View.VISIBLE : View.GONE}">

                    <ImageButton
                        android:id="@+id/btn_recordAudio_pause"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_audio_pause"
                        android:contentDescription="@string/description_pause_recording"
                        android:onClick="@{() -> audioDetailViewModel.onPauseButtonClicked()}"
                        app:layout_constraintBottom_toBottomOf="@+id/btn_recordAudio_play"
                        app:layout_constraintEnd_toStartOf="@id/btn_recordAudio_play"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/btn_recordAudio_play" />

                    <ImageButton
                        android:id="@+id/btn_recordAudio_play"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_audio_play"
                        android:contentDescription="@string/description_play_recording"
                        android:onClick="@{() -> audioDetailViewModel.onPlayButtonClicked()}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/btn_recordAudio_rewind"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@id/btn_recordAudio_pause"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageButton
                        android:id="@+id/btn_recordAudio_rewind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_audio_rewind"
                        android:contentDescription="@string/description_start_recording"
                        android:onClick="@{() -> audioDetailViewModel.onRecordButtonClicked()}"
                        app:layout_constraintBottom_toBottomOf="@+id/btn_recordAudio_play"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/btn_recordAudio_play"
                        app:layout_constraintTop_toTopOf="@+id/btn_recordAudio_play" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide_recordAudio_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.47" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>


</layout>