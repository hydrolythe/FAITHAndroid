<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
                name="recordAudioViewModel"
                type="be.hogent.faith.faith.recordAudio.RecordAudioViewModel"/>

        <import type="be.hogent.faith.faith.recordAudio.RecordAudioViewModel.RecordingStatus"/>

        <import type="android.view.View"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageButton
                android:id="@+id/btn_recordAudio_pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/audio_pause"
                android:onClick="@{() -> recordAudioViewModel.onPauseButtonClicked()}"
                android:visibility="@{recordAudioViewModel.recordingStatus != RecordingStatus.PAUSED? View.VISIBLE : View.INVISIBLE}"
                android:layout_margin="32dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_recordAudio_restart"
                app:layout_constraintStart_toEndOf="@+id/btn_recordAudio_stop"
                app:layout_constraintHorizontal_bias="0.5"
                android:contentDescription="@string/description_pause_recording"/>

        <ImageButton
                android:id="@+id/btn_recordAudio_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/audio_record"
                android:onClick="@{() -> recordAudioViewModel.onRecordButtonClicked()}"
                android:layout_margin="32dp"
                android:visibility="@{recordAudioViewModel.recordingStatus != RecordingStatus.RECORDING? View.VISIBLE : View.INVISIBLE}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_recordAudio_restart"
                app:layout_constraintStart_toEndOf="@+id/btn_recordAudio_stop"
                app:layout_constraintHorizontal_bias="0.5"
                android:contentDescription="@string/description_start_recording"/>

        <ImageButton
                android:id="@+id/btn_recordAudio_restart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/audio_restart"
                android:onClick="@{() -> recordAudioViewModel.onRestartButtonClicked()}"
                android:layout_margin="32dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn_recordAudio_record"
                app:layout_constraintHorizontal_bias="0.5"
                android:contentDescription="@string/description_restart_recording"/>

        <ImageButton
                android:id="@+id/btn_recordAudio_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/audio_stop"
                android:onClick="@{() -> recordAudioViewModel.onStopButtonClicked()}"
                android:layout_margin="32dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_recordAudio_record"
                app:layout_constraintHorizontal_bias="0.5"
                android:contentDescription="@string/description_stop_recording"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>